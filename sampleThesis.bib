}

@ARTICLE{Luebeck2020-ow,
  title     = "{AmpliconReconstructor} integrates {NGS} and optical mapping to
               resolve the complex structures of focal amplifications",
  author    = "Luebeck, Jens and Coruh, Ceyda and Dehkordi, Siavash R and
               Lange, Joshua T and Turner, Kristen M and Deshpande, Viraj and
